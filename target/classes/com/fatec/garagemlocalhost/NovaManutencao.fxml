<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="330.0" prefWidth="544.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fatec.garagemlocalhost.NovaManutencaoController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <HBox>
         <children>
            <VBox>
               <children>
                  <Label text="Placa do Veículo">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtPlaca">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
                  <Label fx:id="lblErroPlaca" text="Preencha a placa do veículo" textFill="RED" visible="false">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </HBox>
      <VBox>
         <children>
            <Label text="Motivo da manutenção">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <TextArea fx:id="txtMotivo" prefHeight="200.0" prefWidth="200.0">
               <font>
                  <Font size="15.0" />
               </font>
            </TextArea>
            <Label fx:id="lblErroMotivo" text="Preencha o motivo da manutenção" textFill="RED" visible="false">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <ButtonBar>
         <buttons>
            <Button fx:id="btnCancelar" mnemonicParsing="false" text="Voltar" />
            <Button fx:id="btnCriarManutencao" mnemonicParsing="false" text="Criar Manutenção" />
         </buttons>
      </ButtonBar>
   </children>
</VBox>
